<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/remove_bottom_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/back2"
        android:layout_width="18dp"
        android:layout_height="30dp"
        android:background="@color/cl_error"
        android:scaleType="fitXY"
        android:src="@drawable/return_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/speed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/speed"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/speed"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="@string/speed"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toTopOf="@+id/blue_line"
        />
    <TextView
        android:id="@+id/blue_line"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:background="@color/bule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp">
    </TextView>




</androidx.constraintlayout.widget.ConstraintLayout>